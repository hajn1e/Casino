<UserControl x:Class="Casino.Game.SlotMachineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Casino.Game"
             mc:Ignorable="d" 
             Height="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Félkarú rabló" Foreground="White" FontSize="22" FontWeight="Bold" Margin="0,0,0,12"/>

        <Border Grid.Row="1" CornerRadius="20" Background="#0B1220" Padding="20" BorderBrush="#374151"
            BorderThickness="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>


                <Border CornerRadius="12" Background="#111827" Padding="12" BorderBrush="#4B5563"
                    BorderThickness="1">
                    <Grid x:Name="ReelGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Három henger, mindegyik saját Canvas-szal-->
                        <Border CornerRadius="8" Background="#0F172A" Margin="6">
                            <Viewbox Stretch="Fill">
                                <Canvas x:Name="Reel1" Width="220" Height="180" ClipToBounds="True"/>
                            </Viewbox>
                        </Border>

                        <Border CornerRadius="8" Background="#0F172A" Margin="6" Grid.Column="1">
                            <Viewbox Stretch="Fill">
                                <Canvas x:Name="Reel2" Width="220" Height="180" ClipToBounds="True"/>
                            </Viewbox>
                        </Border>

                        <Border CornerRadius="8" Background="#0F172A" Margin="6" Grid.Column="2">
                            <Viewbox Stretch="Fill">
                                <Canvas x:Name="Reel3" Width="220" Height="180" ClipToBounds="True"/>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Border>

                <!--Kar-->
                <Grid Grid.Column="1" Margin="20,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1" Width="18" Height="160" Background="#6B7280" CornerRadius="9" HorizontalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#222"/>
                        </Border.Effect>
                    </Border>
                    <Ellipse Grid.Row="2" Width="56" Height="56" Fill="#10B981" Stroke="#064E3B" StrokeThickness="4"
                         x:Name="HandleBall"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
