<Window x:Class="Casino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Casino"
        xmlns:g="clr-namespace:Casino.Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="900" Background="#111827">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="WPF Casino" Foreground="White" FontSize="28" FontWeight="Bold"/>

        <Border Grid.Row="1" CornerRadius="16" Background="#1F2937" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <g:SlotMachineControl x:Name="Slot"/>
            </Grid>
        </Border>
    </Grid>
</Window>
